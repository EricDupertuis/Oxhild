<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <title>{% block title %}Title here{% endblock %}</title>

            <meta name="description" content="Your Description">
            <meta name="viewport" content="user-scalable=yes,width=device-width,initial-scale=1">

            {% block stylesheets %}
                {% stylesheets
                    "@OxhildMtgBundle/Resources/public/vendor/bootstrap/dist/css/bootstrap.min.css"
                %}
                    <link type="text/css" rel="stylesheet" media="all" href="{{ asset_url }}" />
                {% endstylesheets %}
            {% endblock %}

        {% endblock %}
        <!-- Place favicon.ico and apple-touch-icon.png in the web directory -->
    </head>
    <body>
        {% block content %}
            <h1>Hello World</h1>
            {% if app.user %}
                Logged in as : {{ app.user.username }}
            {% elseif not app.user %}
                Not Logged in
            {% endif %}
        {% endblock %}

        {% block javascripts %}
            {% javascripts '@OxhildMtgBundle/Resources/public/js/*' %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>